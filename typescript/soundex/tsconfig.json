{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts", "package.json"],
  "exclude": ["node_modules", "**/*spec.ts", "dist"]
}
